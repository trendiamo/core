@mixin mq($viewport:null) {
  	@media screen and (min-width: $viewport + 1) {
  		@content;
	}
}
@mixin mq-max($viewport:null) {
  	@media screen and (max-width: $viewport) {
  		@content;
	}
}

$inuit-widths-delimiter: \/ !default;

$inuit-widths-breakpoint-separator: \@ !default;

// A mixin to spit out our width classes. Pass in the columns we want the widths
// to have, and an optional suffix for responsive widths. E.g. to create thirds
// and quarters for a small breakpoint:
@mixin inuit-widths($columns, $breakpoint: null) {
  	@each $denominator in $columns {
	    @for $numerator from 1 through $denominator {
	      	.u-#{$numerator}#{$inuit-widths-delimiter}#{$denominator}#{$breakpoint} {
	        	width: ($numerator / $denominator) * 100% !important;
	      	}
	    }
  	}
}

/**
 * A series of width helper classes that you can use to size things like grid
 * systems. Classes take a fraction-like format (e.g. `.u-2/3`). Use these in
 * your markup:
 *
 * <div class="u-7/12">
 */
@include inuit-widths($width-fractions);

//Respinsive widths
@if (variable-exists(breakpoints)) {
	@each $bp in $breakpoints {
		$name: nth($bp, 1);
    	$width: nth($bp, 2);

		@include mq($width) {
      		@include inuit-widths($width-fractions, #{$inuit-widths-breakpoint-separator}#{$name});
    	}
	}
}
