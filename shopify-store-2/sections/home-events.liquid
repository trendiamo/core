    "max_blocks": 6,
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Events"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "Text"
        },
        {
            "type": "text",
            "id": "link_title",
            "label": "Link label",
            "default": "View all"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
            "type": "checkbox",
            "id": "show_bg",
            "label": "Show background",
            "default": true
        },
        {
            "type": "range",
            "id": "overlay_strength",
            "label": "Overlay strength",
            "unit": "%",
            "min": 0,
            "max": 100,
            "step": 10,
            "default": 50
        },
        {
            "type": "header",
            "content": "Eventbrite"
        },
        {
            "type": "text",
            "id": "api_key",
            "label": "Eventbrite Access Token",
            "info": "[Get your Eventbrite Access Token](http://eventbrite.safeasmilk.co/). For more information [click here](https://safeasmilk.zendesk.com/hc/en-gb/articles/115001806445)."
        },
        {
            "type": "range",
            "id": "events_limit",
            "label": "Events",
            "min": 2,
            "max": 6,
            "step": 2,
            "default": 2
        },
        {
            "type": "checkbox",
            "id": "show_link",
            "label": "Show a link to your Eventbrite page",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "event",
            "name": "Event",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
                    "info": "800px width recommended."
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Event name"
                },
                {
                    "type": "text",
                    "id": "subheading",
                    "label": "Subheading"
                },
                {
                    "type": "richtext",
                    "id": "desc",
                    "label": "Text",
                    "default": "<p>Event information</p>"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Events",
            "category": "Promotional"
        }
    ]
}
{% endschema %}