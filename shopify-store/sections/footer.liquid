            "limit": 1,
            "settings": [
                {
                    "type": "paragraph",
                    "content": "Edit content in theme 'Theme settings > Social'."
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Social"
                }
            ]
        },
        {
            "type": "text",
            "name": "Text area",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Text area"
                },
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text",
