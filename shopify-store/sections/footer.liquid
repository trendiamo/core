        },
        {
            "type": "header",
            "content": "Newsletter settings"
        },
        {
            "type": "checkbox",
            "id": "footer_newsletter_enable",
            "label": "Show newsletter signup",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "footer_newsletter_home",
            "label": "Hide on home page",
            "default": false
        },
        {
            "type": "text",
