/*============================================================================
Trendiamo Stylings
This file holds all custom stylings in order to change the theme design
to our likings. No changes were made to the theme.scss.liquid file!
==============================================================================*/

.site-header {
  position: fixed;
  top: 0;
  background-color: white;
  border: none;
  border-radius: 0px 0px 20px 20px;
  box-shadow: 0px 0px 14px rgba(0, 0, 0, 0.13);
  z-index: 999;
}

.site-header.logo--center {
  padding-top: 0;
}

.js-drawer-open-top .drawer--top {
  z-index: 9999;
}

/*============================================================================
                                 GRID ITEMS
==============================================================================*/

.product-influencer__header {
  position: relative;
  width: 100vw;
  height: 64px;
  margin-bottom: 20px;
  background-color: white;
  border-radius: 20px 20px 0px 0px;
  font-weight: 500;
  text-transform: uppercase;
}

.product-influencer__header-m {
  display: none;
}

.product-influencer__header__title {
  float: left;
  padding: 8px 0px 0px 10px;
}

.product-influnecer__header__profilepic {
  float: left;
  width: 64px;
  height: 64px;
  border-radius: 100px;
}

.grid-view-item__title {
  text-align: center;
}

.grid-view-item__vendor {
  text-align: center;
}

.grid-view-item__meta {
  text-align: center;
}

.product-price__price {
  font-weight: 500;
}

/*============================================================================
                                UI ELEMETNS
==============================================================================*/

.btn {
  font-size: 16px;
  font-weight: 700;
  letter-spacing: normal;
}

.btn-back-wrapper-absolute-m {
  display: none;
  position: fixed;
  top: 18px;
  left: 16px;
  z-index: 1000;
}

.btn-back {

}

.btn--has-icon-before .icon {
  margin-top: -4px;
}

/*============================================================================
                               MISCELLANEOUS
==============================================================================*/

.top-hr--invisible{
    display: none;
}

.hr--invisible {
  margin: 20px 0px;
}

/*============================================================================
                              CART & CHECKOUT
==============================================================================*/

.cart__image {
  border-radius: 10px;
}

/*============================================================================
******************************+ MOBILE ONLY ***********************************
==============================================================================*/

@media only screen and (max-width: 749px) {

  .desktop-only {
    display: none;
  }

  .logo-align--center .site-header__logo {
    float: right;
    margin: 0px -32px 0px 0px;
  }

  .top-hr--invisible{
    display: block;
    height: 60px;
  }

  .product-influencer__header {
    display: none;
  }

  .product-influencer__header-m {
    display: block;
    position: relative;
    width: 100vw;
    height: 60px;
    margin-left: -22px;
    background-color: white;
    border-radius: 20px 20px 0px 0px;
    box-shadow: 0px 0px 14px rgba(0, 0, 0, 0.13);
    line-height: 60px;
    font-weight: 500;
    text-transform: uppercase;
  }

  .product-influencer__header-m__title {
    text-align: center;
  }

  .product-influnecer__header-m__profilepic {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 42px;
    height: 42px;
    border-radius: 100px;
  }

  .btn-back-wrapper-absolute-m {
    display: block;
  }

  /*==========================================================================
                             MOBILE PRODUCT PAGE
  ============================================================================*/

  .product-single__photo-wrapper {
    width: 100vw;
    margin-left: -22px;
    border-radius: 10px;
  }

}
