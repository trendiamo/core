html,
body {
  min-height: 100vh;
}

body.template-index {
  background: linear-gradient(160deg, #9de6de, #9de6de 6%, #b1c1e8 88%, #b1c1e8);
}

.template-index {
  .top-hr--invisible {
    height: 0;
  }

  #PageContainer {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100vh;
  }

  .page-width {
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  .callout {
    color: white;
    font-size: 22px;
    font-weight: 500;
    margin-bottom: 24%;
    margin-top: 30%;
  }

  main {
    form {
      display: flex;
      flex-direction: row;
      width: 100%;
    }

    input {
      border-radius: 10px;
      padding: 12px;
      padding-top: 14px;
      width: 100%;
      padding-bottom: 14px;
      font-weight: 500;

      &::placeholder {
        color: #aaa;
      }
    }

    button {
      background-color: #36d4bc;
      border: none;
      border-radius: 10px;
      color: white;
      font-weight: 600;
      text-transform: uppercase;
      padding-right: 1.5rem;
      padding-left: 1.5rem;
      margin-left: 0.5rem;
      font-size: 19px;
    }

    input, button {
      box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.12);
    }
  }

  .site-footer {
    color: white;
    font-size: 13px;
    font-weight: 500;
  }
}

@mixin prefix($property, $value, $prefixes) {
  @each $prefix in $prefixes {
    @if $prefix == webkit {
      -webkit-#{$property}: $value;
    } @else if $prefix == moz {
      -moz-#{$property}: $value;
    } @else if $prefix == ms {
      -ms-#{$property}: $value;
    } @else if $prefix == o {
      -o-#{$property}: $value;
    } @else if $prefix == spec {
      #{$property}: $value;
    } @else  {
      @warn 'Unrecognized prefix: #{$prefix}';
    }
  }
}

/*============================================================================
  Flexbox prefix mixins from Bourbon
    https://github.com/thoughtbot/bourbon/blob/master/app/assets/stylesheets/css3/_flex-box.scss
==============================================================================*/
@mixin display-flexbox() {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%; // necessary for ie10
}

@mixin flex-wrap($value: nowrap) {
  @include prefix(flex-wrap, $value, webkit moz ms spec);
}

@mixin flex-direction($value) {
  @include prefix(flex-direction, $value, webkit moz ms spec);
}

@mixin align-items($value: stretch) {
  $alt-value: $value;

  @if $value == 'flex-start' {
    $alt-value: start;
  } @else if $value == 'flex-end' {
    $alt-value: end;
  }

  // sass-lint:disable no-misspelled-properties
  -ms-flex-align: $alt-value;
  @include prefix(align-items, $value, webkit moz ms o spec);
}

@mixin flex($value) {
  @include prefix(flex, $value, webkit moz ms spec);
}

@mixin flex-basis($width: auto) {
  // sass-lint:disable no-misspelled-properties
  -ms-flex-preferred-size: $width;
  @include prefix(flex-basis, $width, webkit moz spec);
}

@mixin align-self($align: auto) {
  // sass-lint:disable no-misspelled-properties
  -ms-flex-item-align: $align;
  @include prefix(align-self, $align, webkit spec);
}

@mixin align-content($align: center) {
  @include prefix(align-content, $align, webkit ms spec);
}

@mixin justify-content($justify: flex-start) {
  @include prefix(justify-content, $justify, webkit ms spec);
}

.grid-view-item {
  position: relative;
  overflow: auto; /* this is here so that popper-js to be rendered inside */
  margin-bottom: 40px;
  box-shadow: 0px 0px 14px rgba(0, 0, 0, 0.13);
  border-radius: 20px;
}

.grid-view-item__image-wrapper::after {
  content: " ";
  display: block;
  height: 100%;
  position: absolute;
  top: 0;
  width: 100%;
  box-shadow: inset 0 -160px 160px -160px #000000;
}

.grid-view-item__link {
  &:hover, &:focus {
    opacity: 1;
  }
}

.grid-view-item__title {
  font-size: 14px;
}

.grid-view-item__vendor {
  text-transform: none;
  font-weight: 600;
}

.round-img {
  border-radius: 50%;
  object-fit: contain;
  background-color: lightgray;
}

.grid-view-item__image-wrapper {
  margin-bottom: 0;
}

.card-item-info {
  @include display-flexbox();
  @include justify-content(space-between);
  @include align-items(center);
  position: absolute;
  bottom: 10px;
  padding-left: 5%;
  padding-right: 5%;
  color: white;
  font-size: 1.8rem;
  font-weight: 600;
}

a.card-item-action {
  color: white;
}

.card-item-likes {
  flex-basis: 80%;
  font-size: 1rem;
  margin-left: 0.5rem;
}

.card-item-action {
  margin-top: -7px;
  zoom: 1.5;
}

.target {
  color: #888;
  height: 50px;
  width: 50px;
  position: relative;

  svg {
    position: absolute;
    top: 16px;
    left: 16px;
  }
}

.price {
  font-size: 12px;
  margin-right: 0.5rem;
  vertical-align: middle;
  font-weight: 500;
}

.popper {
  z-index: 1;
  background-color: white;
  padding: 1rem;
  border-radius: 1rem;
  min-width: 200px;
  font-size: 85%;
  margin-top: 5px;

  li {
    font-weight: 500;
    margin-bottom: 1rem;
    &:last-child {
      margin-bottom: 0;
    }
  }
}

.popper__arrow {
  width: 0;
  height: 0;
  border-style: solid;
  position: absolute;
  margin: 5px;
  border-color: transparent;
  border-bottom-color: white;
  border-width: 0 5px 5px 5px;
  top: -5px;
  left: calc(50% - 5px);
  margin-top: 0;
  margin-bottom: 0;
}

.gray-popper {
  background-color: burlywood;
  .popper__arrow {
    border-bottom-color: burlywood;
  }
}

.is-success {
  color: #7bcf7d;
}

.ReactModal__Overlay {
  z-index: 1000;
}
