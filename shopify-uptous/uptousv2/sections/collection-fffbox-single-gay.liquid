        </div>
        <a href="{{ section.settings.col1p3 }}" class="btn u2u-btn-black u2u-btn-center fffbox-box-btn">Pick your items</a>
      </div>
    </li>
  </ul>
</div>

  {% if section.settings.show_view_all %}
    <hr class="hr--invisible" aria-hidden="true" />
    <div class="text-center">
      <a href="{{ collection.url }}" class="btn u2u-btn-black" aria-label="{{ 'collections.general.view_all_label' | t: collection_name: collection.title }}">
        {{ 'collections.general.view_all' | t }}
      </a>
    </div>
  {% endif %}

</div>

