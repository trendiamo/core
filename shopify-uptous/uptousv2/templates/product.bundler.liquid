{% assign variant = product.selected_variant %}
{% if variant %}
	{% assign url = '/tools/bundle-builder/' | append: variant.metafields.svi_bundle.bundle_contents.id | append: '/new' %}
	{% assign query = "?items=" %}
    {% for variant in variant.metafields.svi_bundle.bundle_contents.variants %}
        {% assign query = query | append: variant.variant_id | append: ":" | append: variant.product_id | append: "," %}
    {% endfor %}
	{% assign url = url | append: query %}
{% else %}
	{% assign url = '/tools/bundle-builder/' | append: product.metafields.svi_bundle.bundle_id | append: '/new' %}
{% endif %}
<script>
  window.location.href = "{{ url }}"
</script>
